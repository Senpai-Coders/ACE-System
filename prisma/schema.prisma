enum Role {
    root
    admin
    staff
}

model User{
    id Int @id @default(autoincrement())

    email String
    password String

    dateVerified DateTime?
    verified Boolean

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    deletedAt DateTime?

    createdBy Int?
    updatedBy Int?
    deletedBy Int?

    deleted Boolean @default(false)
}

model RoleMap{
    id Int @id @default(autoincrement())

    userId Int
    role Role

    @@unique([userId, role])
}